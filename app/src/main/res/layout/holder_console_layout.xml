<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius_card_view"
            android:paddingTop="10dp"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/text_view_console_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nome console"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="22sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_margin="8dp" />

            <TextView
                android:id="@+id/text_view_developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="desenvolvido por:"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/text_view_console_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/text_view_developer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nome"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/text_view_developer"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/text_view_release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="data de lanÃ§amento:"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/text_view_developer_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/text_view_developer_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11/02/2021"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/text_view_release_date"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"/>


                <ImageView
                    android:id="@+id/image_console"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/xboxone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>