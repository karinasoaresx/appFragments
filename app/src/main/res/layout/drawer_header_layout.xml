<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/background_drawer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_photo_perfil"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:cardCornerRadius="32dp"
        app:layout_constraintBottom_toTopOf="@id/perfil_name"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/perfil" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/perfil_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monalisa Souza"
        app:layout_constraintBottom_toTopOf="@+id/perfil_email"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/perfil_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mona.lisa@hotmail.com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:minWidth="0dp"
        android:minHeight="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>